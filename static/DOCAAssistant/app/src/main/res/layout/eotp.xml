<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/o6"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@+id/o5"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/o5"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/o4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/o4"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/o3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/o1"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:maxLength="1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/o2"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:maxLength="1"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/o1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/o3"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/o2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/otpbtn1"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:text="Verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="164dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>